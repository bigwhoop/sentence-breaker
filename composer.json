{
  "name": "bigwhoop/sentence-breaker",
  "description": "Sentence boundary disambiguation (SBD) - or sentence breaking - library written in PHP.",
  "minimum-stability": "stable",
  "license": "MIT",
  "authors": [
    {
      "name": "Philippe Gerber",
      "email": "philippe@bigwhoop.ch"
    }
  ],
  "require": {
    "php": "^7.4 || ~8.0.0 || ~8.1.0",
    "ext-simplexml": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9",
    "fabpot/goutte": "^2",
    "friendsofphp/php-cs-fixer": "^3.4",
    "phpstan/phpstan": "^1.0",
    "phpstan/phpstan-phpunit": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "Bigwhoop\\SentenceBreaker\\": "src/",
      "Bigwhoop\\SentenceBreaker\\Tests\\": "tests/src/"
    }
  }
}
